<% if current_user.has_cohort && current_page?(controller: "cohorts", action: "show", slug: current_user.active_cohort.name) %>
  <a href="#" data-toggle="modal" data-target="#myModal">add video link</a>
  <div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">add video link</h4>
      </div>
      <div class="modal-body">
        <%= render 'videos/form', {video: Video.new} %>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<% end %>
