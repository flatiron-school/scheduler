<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Time</th>
      <th>Activity</th>
    </tr>
  </thead>
  <tbody>
  <% schedule.activities.sort_by {|a| a.start_time}.each do |activity|  %>
    <tr>
      <td><%= activity.start_hour %></td>
      <td><%= activity.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>
