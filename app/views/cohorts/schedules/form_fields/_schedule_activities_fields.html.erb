<div class="form-group">
  <div class="col-lg-4">
    <br>
    <div id="add-activitys">
      <%= f.fields_for :activities, schedule.activities do |activity_form|%>
        <div id="activity-<%= activity_form.object.id %>">
            <%= activity_form.label :start_time %>
            <%= activity_form.time_field :start_time, class: "form-control" %>
            <%= activity_form.label :end_time %>
            <%= activity_form.time_field :end_time, class: "form-control" %>
            <br>
            <%= activity_form.label :description%>
            <%= activity_form.text_field :description, class: "form-control", data: {activity_position: activity_form.index}  %>
            <br>
            <%= activity_form.label :reserve_room %>
            <%= activity_form.check_box :reserve_room %>
            <br>
            <br>
            <div style="border-bottom: solid; border-width: 1px"></div>
            <br>
            <% if !schedule.new_record?%>
            <%= link_to "remove activity",cohort_schedule_remove_activity_path(schedule.cohort, schedule, activity_id: activity_form.object), method: "post", remote: true, id: "remove-activity", class:"btn btn-primary form-btn" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <br>
    <button id="add-activity" class="btn btn-primary form-btn" data-add-type=activity>+ activity</button>
  </div>
</div>